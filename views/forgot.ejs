<% include ./partials/header%>

<div class="container">
    <% if(success && success.length > 0) { %>
        <div class="row">
            <div class="col-md-12 normal-font">
                <div class="form-row">
                    <div class="form-group col-md-12" style="text-align: center">
                        <h2>Please Close this window.</h2>
                    </div>
                </div>
            </div>
        </div> 
        <div class="fill"></div>
        <div class="fill"></div>
        <div class="fill"></div>
        <div class="fill"></div>
        <div class="fill"></div>
        <div class="fill"></div>
        <div class="fill"></div>
        <div class="fill"></div>
        <div class="fill"></div>
        <div class="fill"></div>
        <div class="fill"></div>
        <div class="fill"></div>
        <div class="fill"></div>
        <div class="fill"></div>
        <div class="fill"></div>
        <div class="fill"></div>
    <% } else { %>  
        <div class="row normal-font">
            <div class="col-md-12">
                <form class="form-signin" action="/forgot" method="POST">
                    <div class="form-row">
                        <div class="form-group col-md-12" style="text-align: center">
                            <h2>Forgot Password</h2>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-4">
                        </div>
                        <div class="form-group col-md-4">
                            <label class="required" for="inputUsername">Please enter your email address</label>
                            <input type="email" class="form-control" id="inputUsername" name="email" placeholder="Email" required = 'required'autofocus>
                        </div>
                        <div class="form-group col-md-4">
                        </div>    
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-5">
                        </div>
                        <div class="form-group col-md-2">
                            <button class="special-button" type="submit">Next</button>
                        </div>
                        <div class="form-group col-md-4">
                        </div>
                    </div> 
                    <div class="fill"></div>
                    <div class="fill"></div>
                    <div class="fill"></div>
                    <div class="fill"></div>
                    <div class="fill"></div>
                    <div class="fill"></div>
                    <div class="fill"></div>
                    <div class="fill"></div>
                    <div class="fill"></div>
                    <div class="fill"></div>
                    <div class="fill"></div>
                    <div class="fill"></div>
                    <div class="fill"></div>
                </form>
            </div>
        </div>    
    <% } %>    
</div> 

